from sklearn.datasets import load_digits
import matplotlib.pyplot as plt
from sklearn.model_selection import train_test_split
from sklearn.svm import SVC   #calling SVC
from sklearn.metrics import accuracy_score
#loading Digit data
digit=load_digits()
#desc
dir(digit)
#features
features=digit.data
label=digit.target
image=digit.images
plt.imshow(image[0])
train_data,test_data,train_label,test_label=train_test_split(features,label,test_size=0.2)
#calling clf
clf=SVC()
#now training my clf
trained=clf.fit(train_data,train_label)
#now time for prediction
predicted_digits=trained.predict(test_data)
predicted_digits
test_label
accuracy_score(predicted_digits,test_label)
