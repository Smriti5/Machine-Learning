import matplotlib.pyplot as plt
import numpy as np
company=["Amazon","Apple","Microsoft","Google"]
revenue=[232.887,62.9,100,136]
profit=[25,20,13,23]
x=np.arange(len(company))           
plt.xticks(x,company)               #xticks sets the x axis tick values
plt.title("TECH STOCKS 2018")         #title of bar graph
plt.bar(x-0.2,revenue,width=0.4,label="Revenue(bln)")
plt.bar(x+0.2,profit,width=0.4,label="Profit %")
plt.legend()
